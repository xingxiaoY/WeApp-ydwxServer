		<view class="weui-flex">
			<view class="weui-flex__item"><button formType="submit" data-type='save' class="weui-btn btn btn-green text-f14" size="default">保存</button></view>
			<view class="weui-flex__item"><button formType="submit" data-type='submit' class="weui-btn btn btn-blue text-f14" >提交</button></view>
		</view>
