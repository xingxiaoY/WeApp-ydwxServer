
<view class="app-cells-title bg-white text-weight text-black text-f16">欢迎登录</view>
<view class="weui-cells weui-cells_after-title app-cells">
	<view class="weui-cells weui-cells_after-title app-cells">
		<view class="weui-cell weui-cell_select app-cell-select">
			<view class="weui-cell__hd weui-cell__hd_in-select-after">
				<view class="weui-label text-gray">公司名称</view>
			</view>
			<view class="weui-cell__bd">
				<picker bindchange="bindCountryChange" value="{{countryIndex}}" range="{{countries}}">
					<view class="weui-select weui-select_in-select-after">{{countries[countryIndex]}}</view>
				</picker>
			</view>
		</view>
		<view class="weui-cell weui-cell_select app-cell-select">
			<view class="weui-cell__hd weui-cell__hd_in-select-after">
				<view class="weui-label text-gray">合作省份</view>
			</view>
			<view class="weui-cell__bd">
				<picker bindchange="bindCountryChange" value="{{countryIndex}}" range="{{countries}}">
					<view class="weui-select weui-select_in-select-after">{{countries[countryIndex]}}</view>
				</picker>
			</view>
		</view>

		<view class="weui-cell">
			<view class="weui-cell__hd">
				<view class="weui-label text-gray">姓名</view>
			</view>
			<view class="weui-cell__bd">
				<input class="weui-input" placeholder="请输入"/>
			</view>
		</view>
		<view class="weui-cell">
			<view class="weui-cell__hd">
				<view class="weui-label text-gray">手机</view>
			</view>
			<view class="weui-cell__bd">
				<input class="weui-input" placeholder="请输入"/>
			</view>
		</view>
		<view class="weui-cell">
			<view class="weui-cell__hd">
				<view class="weui-label text-gray">密码</view>
			</view>
			<view class="weui-cell__bd">
				<input class="weui-input" placeholder="请输入"/>
			</view>
		</view>
	</view>
</view>

<view class="weui-btn-area">
	<button class="weui-btn weui-btn_full" type="primary">登录</button>
</view>

